@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to My Application</h1>

    @if (User.Identity?.IsAuthenticated == true)
    {
        <div class="alert alert-success">
            <h4>Welcome back, @User.FindFirst("FullName")?.Value!</h4>
            <p>You have successfully logged into the system.</p>
        </div>

        <div class="mt-4">
            <a class="btn btn-primary me-2" href="#">Profile</a>
            <a class="btn btn-outline-secondary" asp-page="/Account/Logout">Logout</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4>You are not logged in</h4>
            <p>Please login to access full functionality.</p>
        </div>

        <div class="mt-4">
            <a class="btn btn-primary me-2" asp-page="/Account/Login">Login</a>
            <a class="btn btn-success" asp-page="/Account/Register">Register</a>
        </div>
    }
</div>