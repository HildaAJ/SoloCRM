@page "/customers/edit/{id:int}"
@model SoloCRM.Pages.Customers.EditModel
@{
	ViewData["Title"] = "Edit Customer";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Edit Customer Information
                    </h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Hidden field for Id -->
                        <input asp-for="Customer.Id" type="hidden" />

                        <!-- Basic Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-secondary border-bottom pb-2 mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Basic Information
                                </h5>
                            </div>

                            <!-- Name -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Customer.Name" class="form-label">
                                    <i class="fas fa-user me-1"></i>Name <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Customer.Name" class="form-control" placeholder="Enter customer name" />
                                <span asp-validation-for="Customer.Name" class="text-danger"></span>
                            </div>

                            <!-- Tel -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Customer.Tel" class="form-label">
                                    <i class="fas fa-phone me-1"></i>Phone Number
                                </label>
                                <input asp-for="Customer.Tel" class="form-control" placeholder="Enter phone number" />
                                <span asp-validation-for="Customer.Tel" class="text-danger"></span>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Customer.Email" class="form-label">
                                    <i class="fas fa-envelope me-1"></i>Email
                                </label>
                                <input asp-for="Customer.Email" type="email" class="form-control" placeholder="Enter email address" />
                                <span asp-validation-for="Customer.Email" class="text-danger"></span>
                            </div>

                            <!-- State -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Customer.State" class="form-label">
                                    <i class="fas fa-map-marker-alt me-1"></i>State
                                </label>
                                <input asp-for="Customer.State" class="form-control" placeholder="Enter state" />
                                <span asp-validation-for="Customer.State" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Meeting Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-secondary border-bottom pb-2 mb-3">
                                    <i class="fas fa-handshake me-2"></i>Meeting Information
                                </h5>
                            </div>

                            <!-- MetWhere -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Customer.MetWhere" class="form-label">
                                    <i class="fas fa-location-dot me-1"></i>Met Where
                                </label>
                                <input asp-for="Customer.MetWhere" class="form-control" placeholder="Where did you meet?" />
                                <span asp-validation-for="Customer.MetWhere" class="text-danger"></span>
                            </div>

                            <!-- MetWhen -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Customer.MetWhen" class="form-label">
                                    <i class="fas fa-calendar me-1"></i>Met When
                                </label>
                                <input asp-for="Customer.MetWhen" type="date" class="form-control" />
                                <span asp-validation-for="Customer.MetWhen" class="text-danger"></span>
                            </div>

                            <!-- Status -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Customer.Status" class="form-label">
                                    <i class="fas fa-flag me-1"></i>Status <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Customer.Status" asp-items="Model.StatusOptions" class="form-select">
                                    <option value="">-- Select Status --</option>
                                </select>
                                <span asp-validation-for="Customer.Status" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Additional Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-secondary border-bottom pb-2 mb-3">
                                    <i class="fas fa-sticky-note me-2"></i>Additional Information
                                </h5>
                            </div>

                            <!-- Note -->
                            <div class="col-12 mb-3">
                                <label asp-for="Customer.Note" class="form-label">
                                    <i class="fas fa-comment me-1"></i>Notes
                                </label>
                                <textarea asp-for="Customer.Note" class="form-control" rows="4" placeholder="Enter any additional notes..."></textarea>
                                <span asp-validation-for="Customer.Note" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Read-only Information Section -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <h5 class="text-secondary border-bottom pb-2 mb-3">
                                    <i class="fas fa-lock me-2"></i>System Information
                                </h5>
                            </div>

                            <!-- TeamMember (Read-only) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-users me-1"></i>Team Member
                                </label>
                                <input value="@Model.Customer.TeamMember" class="form-control" readonly style="background-color: #f8f9fa;" />
                                <small class="form-text text-muted">This field cannot be modified</small>
                            </div>

                            <!-- Client (Read-only) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-building me-1"></i>Client
                                </label>
                                <input value="@Model.Customer.Client" class="form-control" readonly style="background-color: #f8f9fa;" />
                                <small class="form-text text-muted">This field cannot be modified</small>
                            </div>

                            <!-- CreateDate (Read-only) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-calendar-plus me-1"></i>Created Date
                                </label>
                                <input value="@Model.Customer.CreateDate.ToString("yyyy-MM-dd HH:mm")" class="form-control" readonly style="background-color: #f8f9fa;" />
                                <small class="form-text text-muted">This field cannot be modified</small>
                            </div>

                            <!-- UpdateDate (Read-only, will be updated automatically) -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label">
                                    <i class="fas fa-calendar-check me-1"></i>Last Updated
                                </label>
                                <input value="@Model.Customer.UpdateDate.ToString("yyyy-MM-dd HH:mm")" class="form-control" readonly style="background-color: #f8f9fa;" />
                                <small class="form-text text-muted">Will be updated automatically when saved</small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-page="./Index" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left me-2"></i>Back to List
                                    </a>
                                    <div>
                                        <button type="submit" class="btn btn-primary me-2">
                                            <i class="fas fa-save me-2"></i>Save Changes
                                        </button>
                                       @*  <a asp-page="./Details" asp-route-id="@Model.Customer.Id" class="btn btn-info">
                                            <i class="fas fa-eye me-2"></i>View Details
                                        </a> *@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Show success message if exists
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
                $(document).ready(function() {
                    alert('@TempData["SuccessMessage"]');
                });
            </text>
        }

        // Show error message if update fails
        @if (TempData["ErrorMessage"] != null)
        {
            <text>
                $(document).ready(function() {
                    alert('@Html.Raw(TempData["ErrorMessage"])');
                });
            </text>
        }

